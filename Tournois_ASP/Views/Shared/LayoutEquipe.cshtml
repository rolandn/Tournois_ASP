<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tournois_ASP</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <div class="container">
        <div class="cadre-menu">
            <ul class="menu-principal">
                <li>
                    <a class="menu-principal-lien" href="/Equipe/ListerTous">
                        Les équipes
                    </a>
                </li>
                <li>
                    <a class="menu-principal-lien" href="/Eleve/ListerTous">
                        Les élèves
                    </a>
                </li>
                <li>
                    <a class="menu-principal-lien" href="/Resultat/ListerTous">
                        Les résultats
                    </a>
                </li>
            </ul>
        </div>
        <div class="cadre-image-ecole">
            <img class="image-ecoleexterieure"
                 src="~/images/imgsecole/ecole_vueexterieure.jpg" />
        </div>

        <div class="cadre-contenu">
            @RenderBody()
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
